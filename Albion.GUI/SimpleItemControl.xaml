<UserControl x:Class="Albion.GUI.SimpleItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albion.GUI"
             xmlns:items="clr-namespace:Albion.Db.Items;assembly=Albion.Db"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance items:SimpleItem}">
    <StackPanel>
        <TextBlock Text="{Binding Id}"/>    
        <TextBlock Text="{Binding PriceHolder.Bye.Price}"/>    
        <TextBlock Text="{Binding PriceHolder.Sell.Price}"/>    
    </StackPanel>
</UserControl>

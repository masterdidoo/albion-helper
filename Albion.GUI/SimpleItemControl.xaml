<UserControl x:Class="Albion.GUI.SimpleItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albion.GUI"
             xmlns:items="clr-namespace:Albion.Db.Items;assembly=Albion.Db"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance items:SimpleItem}">
    <DockPanel>
        <TextBlock Text="{Binding Id}" Style="{StaticResource TextBlockStyle}" />
        <TextBlock Text="1" Style="{StaticResource TextBlockStyle}" />
        <TextBlock Text="{Binding ItemValue, StringFormat=IV: {0}}"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock Text="{Binding Cost, StringFormat=Cost: {0:#,#}, Converter={StaticResource PriceConverter}}"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock Text="{Binding LongSellPrice, StringFormat=Price: {0:#,#}, Converter={StaticResource PriceConverter}}"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock Text="{Binding Profit, StringFormat=Profit: {0}%}"
                   Style="{StaticResource TextBlockStyle}" />
    </DockPanel>
</UserControl>

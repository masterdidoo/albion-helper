<UserControl x:Class="Albion.GUI.Controls.RequirementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albion.GUI"
             mc:Ignorable="d" 
             Name="Root">
    <DockPanel>
        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2" VerticalAlignment="Center"/>
        <!-- <TextBlock Name="TitleBox" Text="{Binding Title, ElementName=Root}" /> -->
        <TextBlock Name="TitleBox" Text="{Binding Title, ElementName=Root}" 
                   Style="{StaticResource TextBlockStyle}"
                   MinWidth="150" />
        <TextBox KeyDown="UIElement_OnKeyDown" Text="{Binding Silver, Mode=TwoWay, Converter={StaticResource PriceConverter}}" 
                 MinWidth="60" TextAlignment="Right" />
        <TextBlock Text="{Binding Cost, Converter={StaticResource PriceConverter}, StringFormat={}{0:#,#}}" 
                   Style="{StaticResource IntBlockStyle}"/>
    </DockPanel>
</UserControl>
